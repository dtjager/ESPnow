void OnDataRecv(const esp_now_recv_info_t *info, const uint8_t *incomingData, int len) {
  memcpy(&incomingReadings, incomingData, sizeof(incomingReadings));
  Serial.print("Bytes received: ");
  Serial.println(len);
  
  // Clear the screen to a darker gray for a nice background
  tft.fillScreen(TFT_BLACK);

  // Draw a separator line
  tft.drawFastHLine(0, 40, tft.width(), TFT_DARKGREY);

  // Display the title
  tft.setTextColor(TFT_YELLOW);
  tft.setTextSize(3);
  tft.setCursor(20, 10);
  tft.println("Weather Station");

  // Conditional icon drawing
  // This is a simple condition, you could make it more complex
  if (incomingReadings.temperature > 80.0) {
    tft.pushImage(200, 80, 16, 16, sun_icon);
  } else {
    tft.pushImage(200, 80, 16, 16, cloud_icon);
  }

  // Display Temperature
  tft.setTextColor(TFT_ORANGE);
  tft.setTextSize(4);
  tft.setCursor(20, 80);
  tft.printf("Temp: %.1f F", incomingReadings.temperature);

  // Display Humidity
  tft.setTextColor(TFT_SKYBLUE);
  tft.setTextSize(4);
  tft.setCursor(20, 150);
  tft.printf("Hum : %.1f %%", incomingReadings.humidity);

  // Display Pressure
  tft.setTextColor(TFT_MAGENTA);
  tft.setTextSize(4);
  tft.setCursor(20, 220);
  tft.printf("Pres: %.1f hPa", incomingReadings.pressure);
}

void setup() {
  Serial.begin(115200);
  Serial.println("ESP32 Receiver Initializing...");

  tft.init();
  tft.setRotation(1);
  tft.fillScreen(TFT_BLACK);
  tft.setTextColor(TFT_GREEN);
  tft.setTextSize(2);
  tft.setCursor(20, 20);
  tft.println("Waiting for data...");

  WiFi.mode(WIFI_STA);

  if (esp_now_init() != ESP_OK) {
    Serial.println("Error initializing ESP-NOW");
    return;
  }
  
  esp_now_register_recv_cb(OnDataRecv);
  Serial.println("ESP-NOW initialized. Waiting for data...");
}

